# top-most editorconfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[.*rc]
indent_size = 2

[*.{yml,yaml,toml,json,lock,rules}]
indent_size = 2

[*.{yml,yaml,toml,json,lock,rules}.j2]
indent_size = 2
